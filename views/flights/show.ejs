<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Deets page
        <a href="/">Home</a>
        <a href="/flights/new">Add Flight</a>
    </h1>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>FlightNo</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= flight.departs %></td>
            </tr>
        </tbody>
    </table>
    <div>
        <br>
        <br>
        <br>
        <form method= "POST" action="/flights/<%= flight._id %>">
            <label> Destination Airport: </label>
            <input type="text" name="airport"><br>
            <label>Arrival Time: </label>
            <input type="date" name="arrival"><br>
            <input type="submit" value="Add Destination">
        </form>
    </div>
    <br>
    <br>
    <br>
    <table>
        <thead>
            <tr>
                <th>Destinations</th>
            </tr>
        </thead>
        <tbody>
            <% flight.destinations.forEach(function(f) { %>
                <tr>
                  <td><%= f.airport %></td>
                  <td><%= f.arrival %></td>
                </tr>
            <% }); %>
    
        </tbody>
    </table>
</body>
</html>
